// 'fs' C) o mC3dulo de File System (Sistema de Arquivos)
const fs = require('fs');
// O comando abaixo cria (ou sobrescreve) um arquivo chamado 'vazio.txt' com conteC:do vazio ('')
fs.writeFileSync('vazio.txt', '');
console.log("Arquivo criado no teu computador!");
// 'require' serve para importar mC3dulos (ferramentas) que jC! vC*m com o Node
const os = require('os'); // Importa o mC3dulo de Sistema Operacional (OS)
console.log("Utilizador atual: " + os.userInfo().username);
// 'require' serve para importar módulos (ferramentas) que já vêm com o Nodeconst os = require('os'); // Importa o módulo de Sistema Operacional (OS)
console.log("Utilizador atual: " + os.userInfo().username);
